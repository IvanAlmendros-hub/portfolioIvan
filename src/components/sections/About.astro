<style>
.compare-slider {
  position: relative;
  cursor: ew-resize;
  overflow: hidden;
}

.compare-slider img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: inherit;
  pointer-events: none;
  user-select: none;
}

.compare-slider .after {
  clip-path: inset(0 50% 0 0);
  transition: clip-path  linear;
}

.compare-slider .divider {
  position: absolute;
  top: 0;
  left: 50%;
  width: 2px;
  height: 100%;
  background: rgba(255,255,255,0.9);
  pointer-events: none;
  transition: left  linear;
}
</style>

<script>
const slider = document.querySelector(".compare-slider");
const after = slider.querySelector(".after");
const divider = slider.querySelector(".divider");

slider.onmousemove = e => {
  const x = e.offsetX;
  const pct = Math.max(0, Math.min(100, (x / slider.offsetWidth) * 100));
  after.style.clipPath = `inset(0 ${100 - pct}% 0 0)`;
  divider.style.left = `${pct}%`;
};

slider.onmouseleave = () => {
  after.style.clipPath = "inset(0 50% 0 0)";
  divider.style.left = "50%";
};
</script>
